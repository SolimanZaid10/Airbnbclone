@using Microsoft.AspNetCore.Identity
@using Airbnb.Models
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
<li class="nav-item">
    <a  asp-action="Register" asp-controller="Account" class="btn btn-primary" 
       data-ajax="true" data-ajax-update="#RegisterModal" data-ajax-success="$('#RegisterModal').modal('show')">Register</a>
    
</li>
<li class="nav-item">
    
    <a asp-action="Login" asp-controller="Account"  class="btn btn-primary"
       data-ajax="true" data-ajax-update="#RegisterModal" data-ajax-success="$('#RegisterModal').modal('show')">Login</a>
</li>
        
    }
</ul>

