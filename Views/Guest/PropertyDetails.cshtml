@model PropertyDetailsViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <!--calender css-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.9/css/all.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/propDetails.css" />
}

<!--start pic-caursel-->
<section class="pic-caursel">
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/@Model.Property.Photos[0].Url" class="d-block w-100" alt="image-0">
            </div>
            @for (var i = 1; i < Model.Property.Photos.Count; i++)
            {
                <div class="carousel-item">
                    <img src="~/@Model.Property.Photos[i].Url" class="d-block w-100" alt="prop-image-@i">
                </div>
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</section>
<!--end pic-caursel-->
<!--start title section-->
<section class="container">
    <div>
        <h1>
            Great Pyramids View from your Sky Lounge (1)
        </h1>
    </div>
    <div class="information">
        <div>
            <span>
                <i class="fas fa-star red_icon"></i>
                <a href="#"> <span class="dark-span">5.0</span> </a>
                <span class="light-span">(23)</span>
            </span>
            <span>&middot;</span>
            <span>
                <i class="fas fa-award red_icon"></i>
                <span class="light-span">Superhost</span>
            </span>
            <span>&middot;</span>
            <span class="address">
                <a href="#"><span class="light-anchor">Nazlet El-Semman, Giza Governorate, Egypt</span></a>
            </span>
        </div>
        <div class="social-btns">
            <div class="btn-container">
                <button class="btns-social">
                    <div>
                        <span>
                            <i class="fas fa-external-link-alt dark_icon"></i>
                        </span>
                        <span class="dark-span">Share</span>
                    </div>
                </button>
            </div>
            <div class="btn-container">
                <button class="btns-social">
                    <div>
                        <span>
                            <i class="far fa-heart dark_icon"></i>
                        </span>
                        <span class="dark-span">Save</span>
                    </div>
                </button>
            </div>
        </div>
    </div>
</section>
<!--end title section-->
<!--start pic section-->
<section class="pic-area">
    <div class="container">
        <div class="pic_content">
            <img class="img1" src="~/@Model.Property.Photos[0].Url">

            @for (int i = 1; i < 5; i++)
            {
                <img class="img@(i + 1)" src="~/@Model.Property.Photos[i].Url">
            }
        </div>
    </div>
    <div class="morebtn-containter">
        <span>
            <i class="fas fa-angle-double-right"></i>
        </span>
        <!--start offcanvas-->
        <button data-bs-toggle="offcanvas" data-bs-target="#offcanvasBottom" aria-controls="offcanvasBottom">
            Show
            all photos
        </button>
        <div class="offcanvas offcanvas-bottom" tabindex="-1" id="offcanvasBottom"
             aria-labelledby="offcanvasBottomLabel">
            <div class="offcanvas-header">

                <button type="button" class=" text-reset dark_icon" data-bs-dismiss="offcanvas" aria-label="Close">
                    <i class="fas fa-arrow-left"></i>
                </button>
                <span style="margin-right:20px;">
                    <span>
                        <i class="far fa-share-square dark_icon"></i>
                        <span class="font-dark">Share</span>
                    </span>
                    <span>
                        <i class="far fa-heart dark_icon"></i>
                        <span class="font-dark">Save</span>
                    </span>
                </span>
            </div>
            <div style="height: 100%;" class="offcanvas-body">
                <div class="container">
                    @foreach (var image in Model.Property.Photos)
                    {
                        <img src="~/@image.Url" />
                    }
                </div>
            </div>
        </div>
        <!--end offcanvas-->
    </div>
</section>
<!--end pic section-->
<!--start details section-->
<section class="details">
    <div class="container">
        <div class="data">
            <!--grid-->
            <div class="houseData">
                <!--basic info-->
                <div class="data-plugin-in-point">
                    <h1>Entire apartment hosted by Ahmed</h1>
                    <span>@Model.Property guests</span>
                    <span>&middot;</span>
                    <span>1 bedroom</span>
                    <span>&middot;</span>
                    <span> 2 beds</span>
                    <span>&middot;</span>
                    <span>1 bath</span>
                    <div class="hostImg">
                        <!--absolute-->
                        <img src="./images/test.jpg">
                    </div>
                </div>
                <hr>
                <!-----home type and house rules------>
                <div class="data-plugin-in-point">
                    <div class="entire">
                        @if (Model.Property.GuestPlaceType.Name == "Entire Home")
                        {
                            <i class="fas fa-home fa-2x"></i>
                        }
                        <div class="text">
                            <h3 class="font-dark">@Model.Property.GuestPlaceType.Name</h3>
                            <p class="font-light">You’ll have the apartment to yourself.</p>
                        </div>
                    </div>
                </div>
                <hr>
                <!----- host description ------>
                <div class="data-plugin-in-point">
                    <p class="readmore">
                        @Model.Property.Description
                        <span class="readmore2">...Read More<a href="#"></a></span>
                    </p>
                    <span id="readmore2" class="readmore2">...Read More<a href="#"></a></span>

                    <a href="#">Contact host</a>
                </div>
                <hr>
                <!------ sleeping arrangement ----->
                <div class="data-plugin-in-point data-plugin-in-point2">
                    <div class="sleeping-arrangment">
                        <h1>Sleeping arrangements</h1>
                        <div id="sleepingdiv">
                            <span>
                                <span style="display: inline;">
                                    <i class="fas fa-bed fa-2x"></i>
                                </span>
                                <span style="display: inline;">
                                    <i class="fas fa-bed fa-2x"></i>
                                </span>
                            </span>
                            <h3 class="font-dark">Bedroom 1</h3>
                            <p class="font-light">2 Single beds</p>
                        </div>
                    </div>
                </div>
                <hr>
                <!----- amenities list ------>
                <div class="data-plugin-in-point">
                    <h1>Amenities</h1>
                    <div id="divAmenity" style="overflow:hidden;height:73px">
                        <!--grid-->
                        <div class="row">

                            @foreach (var item in Model.Property.Amenities)
                            {

                                <div class="Amenity col-6">
                                    @Html.Raw(@item.Amenity.Icon)
                                    <span class="dark-light">@item.Amenity.Name</span>

                                </div>
                            }
                        </div>
                    </div>
                    <button id="show_all_Amenity" class="show-more"style="background:#ffffff;margin-top:10px">Show all 17 amenities</button>
                </div>
                <hr>
                <!----- calendar availability ------>
                <div class="date-plugin-in-point">
                    <div>
                        <div id="multiple" class="article">
                            <div class="multi-select-calendar"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--start check-card-->
        <div class="card check">
            <div class="check-container">
                <div class="check-title">

                    <span class="dark-span" id="amountspan">
                        <h1 style="display: inline;">&#36 35</h1>
                        <span>/night</span>
                    </span>
                    <span class="rightt">
                        <i class="fas fa-star red_icon"></i>
                        <a href="#"> <span class="dark-span">5.0</span> </a>
                        <span class="light-span">(23)</span>
                    </span>
                    <span class="rightt-btn">
                        <button class="btn-glow">
                            <span class="glow">
                                Check availability
                            </span>
                            Check availability
                        </button>
                    </span>
                </div>
                <div class="check-body">
                    <!--grid-->
                    <table class="card-table" cellspacing="10">
                        <thead>
                            <tr>
                                <td>
                                    <div class="check-in ">
                                        <div class="font-light-dark">CHECK-IN</div>
                                        <div class="font-light-dark" id="check-in-date">
                                            29/7/2021
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="check-out">
                                        <div class="font-light-dark">CHECKOUT</div>
                                        <div class="font-light">
                                            Add date
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </thead>
                        <tr>
                            <td colspan="2">
                                <div class="guest-no">
                                    <div class="Adult">
                                        <span class="dark-span">Guests</span>
                                    </div>
                                    <div class="spacer"></div>
                                    <div class="add-sub">
                                        <div>
                                            <span class="sub">
                                                <button class="sub-btn"
                                                        id="sub-btn-Adult">
                                                    <span>-</span>
                                                </button>
                                            </span>
                                            <span class="value" id="Adult-value">1 </span>
                                            <span class="add">
                                                <button class="add-btn"
                                                        id="add-btn-Adult">
                                                    <span>+</span>
                                                </button>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                <button class="btn-glow">
                                    <span class="glow">
                                        Check availability
                                    </span>
                                    Check availability
                                </button>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <!--end check-card-->
        </div>
    </div>
</section>
<!--end details section-->

