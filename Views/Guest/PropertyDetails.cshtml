    <script type="text/javascript" src="~/js/logic.js"></script>
<script>
    $('#show_all_Amenity').click(function () {
        console.log("Clicked");
        $('#divAmenity').css("height", "150px");
        $('#show_all_Amenity').css("display", "none");


    })

</script>
}