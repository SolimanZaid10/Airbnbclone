@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            $('.ContainOptions').css('display', 'none')
            $('.DescriptionDiv').css('display', 'none')
            $('.ContainTypeOfPlace').css('display', 'none')
            $('.ContainOptionsTypeOfPlace').css('display', 'none')
            $('.ContainNumberOfRooms').css('display', 'none')
            $('.TipsInMobile').css('display', 'none')
            $('#bgmodal').css('display', 'none')


        })
        $('.SelectCategory').click(function () {
            $('.ContainOptions').css('display', 'block')
        })
        $('.SelectTypeOfPlace').click(function () {
            $('.ContainOptionsTypeOfPlace').css('display', 'block')
        })
        $(document).mouseup(function (e) {
            var ContainOption = $('.ContainOptions')
            ContainOptionTypeOfPlace = $('.ContainOptionsTypeOfPlace')
            if (!ContainOption.is(e.target) && ContainOption.has(e.target).length === 0) {
                ContainOption.hide()

            } else {
                ContainOption.css('display', 'block !important')
            }
            if (!ContainOptionTypeOfPlace.is(e.target) && ContainOptionTypeOfPlace.has(e.target).length === 0) {
                ContainOptionTypeOfPlace.hide()

            } else {
                ContainOptionTypeOfPlace.css('display', 'block !important')
            }
        })
        $('.ContainOneOption').click(function () {
            var SelectedOption = $(this).find('.OptionCategory')[0].innerText
            var OptionDescription = $(this).find('.OptionDescription')[0].innerText
            if (SelectedOption == "Bed and breakfast" || SelectedOption == "Boutique hotel") {
                $('.ContainNumberOfRooms').css('display', 'block')

            }
            else {
                $('.ContainNumberOfRooms').css('display', 'none')

            }
            $('.SelectCategoryInput').val(SelectedOption)
            $('.ContainOptions').css('display', 'none')
            $('.DescriptionDivCategory')[0].innerText = SelectedOption + ": " + OptionDescription
            $('.DescriptionDivCategory').css('display', 'block')
            $('.ContainTypeOfPlace').css('display', 'block')
        })
        $('.ContainOneOptionTypeOfPlace').click(function () {
            console.log(this)
            var SelectedOptionTypeOfPlace = $(this).find('.OptionTypeOfPlace')[0].innerText
            var OptionDescriptionTypeOfPlace = $(this).find('.OptionDescriptionTypeOfPlace')[0].innerText

            $('.SelectTypeOfPlaceInput').val(SelectedOptionTypeOfPlace)
            $('.ContainOptionsTypeOfPlace').css('display', 'none')
            $('.DescriptionDivTypeOfPlace')[0].innerText = SelectedOptionTypeOfPlace + ": " + OptionDescriptionTypeOfPlace
            $('.DescriptionDivTypeOfPlace').css('display', 'block')
            // $('.ContainTypeOfPlace').css('display','block')
        })
        $('.ContainTipsInSmall').click(function () {
            $('.TipsInMobile').css('display', 'block')
            $('#bgmodal').css('display', 'block')
        })
        $('.close').click(function () {
            $('.TipsInMobile').css('display', 'none')
            $('#bgmodal').css('display', 'none')

        })
    </script>
