                        $('#next').prop('type', 'submit')
                    }
                    else if (FormValidation13 == false) {
                        $('.ValidationBoxForDescription').css('display', 'table')

                    }
                    if (PageNumber == 15) {
                        $('#next').prop('disabled', true)

                    }
                    if (PageNumber < 14) {
                        if ((FormValidation7) == false && $('#7').is(":visible") ||
                            (FormValidation4) == false && $('#4').is(":visible") ||
                            (FormValidation8) == false && $('#8').is(":visible") ||
                            (FormValidation13) == false && $('#13').is(":visible"))
                            {
                            console.log('cantdothis')
                            $('.ValidationBoxForDescription').css('display', 'table')
                        }
                        else {
                            $('.ContainContainFooter').removeClass('col col-md-11')
                            $('.containFooter').removeClass('col col-xl-12')
                            $('.containFooter').css('left', '55px')
                            $('.ValidationBoxForDescription').css('display', 'none')
                            $("#" + (PageNumber - 1)).css('display', 'none')
                      
                            $("#" + PageNumber).css('display', 'flex')
                
                            $('#file').val(function (i, oldval) {
                                return parseInt(oldval, 10) + (100/13)
                            })
                            PageNumber++
                        }
