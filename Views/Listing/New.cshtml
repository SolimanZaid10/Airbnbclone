                 var minNiights = 0
    var maxNights = 0
    $("#minnightsminus").click(function (event) {
        if (minNiights > 0) {
            minNiights--;
            if (minNiights == 0) {
                $('#min').val("Min");
            } else {
                $('#min').val("" + minNiights + "  " + "min Nights");
            }
        }
    });
    $("#minnightsplus").click(function (event) {
        if (minNiights < maxNights) {
            minNiights++;
            $('#min').val("" + minNiights + "  " + "min Nights");
        }
    });
    $("#maxnightsminus").click(function (event) {
        if (maxNights > minNiights) {
            if (maxNights > 0) {
                maxNights--;
                if (maxNights == 0) {
